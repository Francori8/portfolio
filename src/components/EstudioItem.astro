---
interface Props{
    titulo :string,
    lugar: string,
    duracion: string

}

const {titulo, duracion, lugar} = Astro.props

---

<li class="relative mb-6 h-16">
    <time class="text-sm font-normal text-gray-400 ">{duracion}</time>
    <div class="flex items-center  ">
        <div class="hidden z-10 sm:flex items-center justify-center w-3 h-3 bg-blue-100 rounded-full ">
        </div>
        <div class="hidden sm:flex w-full bg-blue-100  h-0.5 "></div>
    </div>
    <div class="mt-3 sm:pe-8">
        <h3 class="text-lg font-semibold text-sky-400 ">{titulo}</h3>
        <p class="text-lg font-normal text-gray-200">{lugar}</p>
    </div>
</li>